{
  "compilerOptions": {
    "lib": [
      "ESNext"
    ],
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "bundler",
    "moduleDetection": "force",
    "allowImportingTsExtensions": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noEmit": true,
    "composite": true,
    "strict": true,
    //"downlevelIteration": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "types": [
      "bun-types"
    ],
    "baseUrl": "./src",
    "paths": {
      "@errors/*": [
        "errors/*"
      ],
      "@server/*": [
        "server/*"
      ],
      "@common/*": [
        "common/*"
      ],
      "@config": [
        "config/config"
      ],
      "@logger": [
        "logger/logger"
      ],
      "@migrations": [
        "db/migrations/*"
      ],
      "@seeds": [
        "db/seeds/*"
      ],
      "@data-source": [
        "db/data-source"
      ],
      "@middleware/*": [
        "middleware/*"
      ],
      "@utils/*": [
        "utils/*"
      ],
      "@health-check/controllers/*": [
        "apps/health-check/adapters/http/controllers/*"
      ],
      "@health-check/routes/*": [
        "apps/health-check/adapters/http/routes/*"
      ],
      "@health-check/views/*": [
        "apps/health-check/adapters/http/views/*"
      ],
      "@health-check/applications/*": [
        "apps/health-check/applications/*"
      ],
      "@health-check/models/*": [
        "apps/health-check/models/*"
      ],
      "@health-check/repositories/*": [
        "apps/health-check/repositories/*"
      ],
      "@user/controllers/*": [
        "apps/user/adapters/http/controllers/*"
      ],
      "@user/routes/*": [
        "apps/user/adapters/http/routes/*"
      ],
      "@user/views/*": [
        "apps/user/adapters/http/views/*"
      ],
      "@user/applications/*": [
        "apps/user/applications/*"
      ],
      "@user/models/*": [
        "apps/user/models/*"
      ],
      "@user/repositories/*": [
        "apps/user/repositories/*"
      ]
    }
  }
}